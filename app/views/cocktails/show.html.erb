<p><%= @cocktail.name %></p>
<p><% @cocktail.doses.each do |dose| %>
    <%= dose.description  %>
    <%= dose.ingredient.name %> 
    <%= link_to "Delete", 
          dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
  <% end  %> </p>

<%= simple_form_for [@cocktail, @dose] do |d| %>
  <%= d.input :description %>
  <%= d.association :ingredient %>
  <%= d.submit "Submit doses", class: "btn btn-primary"%>
<% end  %>

<%= link_to "Home", cocktails_path %>


